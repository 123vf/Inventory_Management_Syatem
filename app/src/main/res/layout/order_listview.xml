<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    android:elevation="6dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

            <TextView
                android:id="@+id/pna"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="8dp"
                android:text="Product Name : "
                android:textColor="#1445A8"
                android:textSize="20sp"
                android:textStyle="bold" />

        <TextView
            android:id="@+id/productNameTextView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product Name"
            android:textSize="20sp"
            android:textColor="#000"
            android:layout_toRightOf="@id/pna"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/cna"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="Customer Name : "
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#1445A8"
            android:layout_below="@+id/pna"
            android:layout_marginLeft="10dp" />

        <TextView
            android:id="@+id/customerNameTextView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Customer Name"
            android:textSize="20sp"
            android:textColor="#000"
            android:layout_below="@+id/pna"
            android:layout_toRightOf="@+id/cna" />

        <TextView
            android:id="@+id/ps"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="Price :"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#1445A8"
            android:layout_below="@+id/customerNameTextView2"
            android:layout_marginLeft="10dp" />

        <TextView
            android:id="@+id/rs"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:text="Rs."
            android:textSize="20sp"
            android:textColor="#000"
            android:layout_below="@+id/customerNameTextView2"
            android:layout_toRightOf="@id/ps" />

        <TextView
            android:id="@+id/productPriceTextView2"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Price"
            android:textSize="20sp"
            android:textColor="#000"
            android:layout_below="@+id/customerNameTextView2"
            android:layout_toRightOf="@+id/rs" />

        <TextView
            android:id="@+id/qu"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Quantity : "
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#1445A8"
            android:layout_below="@+id/productPriceTextView2"
            android:layout_marginLeft="10dp" />

        <TextView
            android:id="@+id/productQuanTextView2"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Product Quantity"
            android:textSize="20sp"
            android:textColor="#000"
            android:layout_marginBottom="8dp"
            android:layout_below="@+id/productPriceTextView2"
            android:layout_toRightOf="@+id/qu" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>